@page
@model aspnetcoreapp.Pages.Vetements.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Vetement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vetement.ID" />
            <div class="form-group">
                <label asp-for="Vetement.Nom" class="control-label"></label>
                <input asp-for="Vetement.Nom" class="form-control" />
                <span asp-validation-for="Vetement.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vetement.Prix" class="control-label"></label>
                <input asp-for="Vetement.Prix" class="form-control" />
                <span asp-validation-for="Vetement.Prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vetement.Genre" class="control-label"></label>
                <input asp-for="Vetement.Genre" class="form-control" />
                <span asp-validation-for="Vetement.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vetement.Description" class="control-label"></label>
                <input asp-for="Vetement.Description" class="form-control" width="250" height="200" />
                <span asp-validation-for="Vetement.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Retour à la Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
