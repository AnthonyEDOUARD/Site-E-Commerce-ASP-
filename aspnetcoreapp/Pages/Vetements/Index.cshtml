@page
@model aspnetcoreapp.Pages.Vetements.IndexModel

@{
    ViewData["Title"] = "Ajouts Produits";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Nouveau Produit</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vetement[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vetement[0].Prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vetement[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vetement[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vetement) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Editer</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
